<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="OTApp.controller.ChangeOT"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>title3}" class="sapUiSizeCompact" showNavButton="true" navButtonPress="onBackBtnChange">
				<!--<content>-->
				<Table id="idOTTableChng" inset="false" growing="true" items="{path: '/'}">
					<headerToolbar class="sapUiVisibleOnlyOnDesktop">
						<Toolbar class="sapUiVisibleOnlyOnDesktop">
							<Title text="{i18n>OT}" level="H2"/>
						</Toolbar>
					</headerToolbar>
					<columns fixedLayout="false">
						<Column demandPopin="true">
							<Text text="{i18n>MID}"/>
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>EmpName}"/>
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>OrgUnit}"/>
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>Posn}"/>
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>EmpGrp}"/>
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>EmpSubGrp}"/>
						</Column>
						<Column demandPopin="true" hAlign="Center">
							<Text text="{i18n>docn}"/>
						</Column>
						<Column demandPopin="true" hAlign="Center">
							<Text text="{i18n>docdt}"/>
						</Column>
						<Column demandPopin="true" hAlign="Center">
							<Text text="{i18n>OTDate}"/>
						</Column>
						<!--<Column minScreenWidth="Tablet">-->
						<!--	<Text text="{i18n>Hrate}"/>-->
						<!--</Column>-->
						<!--<Column demandPopin="true" hAlign="Center">-->
						<!--	<Text text="{i18n>NoDays}"/>-->
						<!--</Column>-->
						<Column demandPopin="true" hAlign="Center">
							<Text text="{i18n>OTAmt}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem vAlign="Middle">
							<cells>
								<Text text="{milno}"/>
								<Text text="{name}" wrapping="false"/>
								<Text text="{orgunit}"/>
								<Text text="{posn}"/>
								<Text text="{empgrp}"/>
								<Text text="{empsubgrp}"/>
								<Text text="{docn}"/>
								<Text text="{docdt}"/>
								<Text text="{otdate}"/>
								<!--<Text text="{hrate}"/>-->
								<!--<Input valueLiveUpdate="true"/>-->
								<Text text="{amt}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button id="idSubmit" text="{i18n>Submit}" press="OnPressSubmit" type="Accept" icon="sap-icon://accept"/>
						<Button text="{i18n>Cancel}" press="onCancelBtnChange" type="Transparent" icon="sap-icon://sys-cancel"/>
						<content/>
					</Toolbar>
				</footer>
				<!--</content>-->
			</Page>
		</pages>
	</App>
</mvc:View>