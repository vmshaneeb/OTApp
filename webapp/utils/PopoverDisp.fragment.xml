<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout">
	<ResponsivePopover title="{i18n>SelOTDates}" class="sapUiPopupWithPadding" placement="Bottom">
		<endButton>
			<Button text="{i18n>Close}" press="handleCloseButton"/>
		</endButton>
		<content>
			<u:Calendar id="calendarDisp" select="handleCalendarSelect" secondaryCalendarType="Islamic" intervalSelection="flase"
				singleSelection="false" nonWorkingDays="5,6"/>
			<u:CalendarLegend id="legend1"/>
			<Table id="popoverTable" inset="false" growing="true" fixedLayout="false" noDataText="No Dates Selected" headerText="Selected Dates"
				items="{/TempDates}">
				<columns>
					<Column visible="false">
						<Text text="{i18n>MID}"/>
					</Column>
					<Column>
						<Text text="{i18n>OTDate}"/>
					</Column>
					<Column hAlign="Center">
						<Text text="{i18n>OTHrs}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{MilNo}" visible="false"/>
							<Text
								text="{path:'Dates', type: 'sap.ui.model.type.Date', formatOptions: { source: { pattern: 'yyyy-MM-ddTKK:mm:ss' },pattern: 'dd.MM.yyyy' }}"/>
							<Text text="{Hrs}" width="40px"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>